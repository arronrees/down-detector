<% pageTitle='Login' %>

  <%- include('../partials/head') %>

    <%- include('../partials/header') %>

      <main class="mt-24">

        <h1 class="text-center text-lg font-bold mb-4">Login or Signup</h1>

        <form action="/auth/login" method="POST">
          <div class="flex flex-col gap-4 items-center text-center max-w-xl mx-auto">
            <input type="text" name="email" id="email" class="w-full border border-gray-300 px-4 py-2"
              placeholder="Email">
            <button type="submit" class="btn w-full">Send me a Link</button>
          </div>
        </form>

      </main>

      <%- include('../partials/footer') %>