<% pageTitle='Dashboard' %>

  <%- include('../partials/head') %>

    <%- include('../partials/header') %>

      <main class="mt-24">

        <h1 class="text-center text-lg md:text-2xl font-bold mb-4">My Sites</h1>

        <div class="flex flex-col gap-6">

          <% sites && sites.forEach(site=> { %>

            <div class="p-4 flex flex-col gap-4 <%= site.alive ? 'bg-green-50' : 'bg-red-50' %>">
              <div class="flex gap-4 justify-between">
                <div class="flex flex-col gap-2">
                  <p class="text-lg font-semibold text-gray-600">
                    <%= site.url %>
                  </p>
                  <p class="">Site is currently <span class="underline">
                      <%= site.alive ? 'available' : 'unavailable' %>
                    </span></p>
                </div>
                <div class="flex flex-col gap-2 items-end">
                  <% if(site.alive) { %>
                    <a href="https://<%= site.url %>" target="_blank" rel="noreferrer noopener"
                      class="mt-auto font-semibold underline">View
                      Site</a>
                    <% } %>
                </div>
              </div>
            </div>

            <% }) %>

        </div>

      </main>

      <%- include('../partials/footer') %>